{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "client/out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "/admin/**",
        "function": "api"
      }
    ]
  }
}
